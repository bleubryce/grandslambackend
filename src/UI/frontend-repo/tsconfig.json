{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/Analysis/**/*",
    "src/Database/**/*",
    "src/config.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/UI/**/*",
    "tests/**/*"
  ]
} 