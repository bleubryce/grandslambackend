# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/baseball_analytics
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=baseball_analytics
DB_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Settings
JWT_SECRET=your-development-jwt-secret
JWT_EXPIRATION=24h
SESSION_SECRET=your-development-session-secret

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5mb

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true 