{
  "name": "grand-slam-analytics-backend",
  "version": "1.0.0",
  "description": "Backend server for the Grand Slam Baseball Analytics System",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:unit": "jest --testMatch='**/*.unit.test.ts'",
    "test:integration": "jest --testMatch='**/*.integration.test.ts'",
    "test:e2e": "jest --testMatch='**/*.e2e.test.ts'",
    "test:data-processing": "jest --testMatch='**/DataProcessing/**/*.test.ts'",
    "test:analysis": "jest --testMatch='**/Analysis/**/*.test.ts'",
    "test:ml": "jest --testMatch='**/ML/**/*.test.ts'",
    "test:api": "jest --testMatch='**/Api/**/*.test.ts'",
    "test:security": "jest --testMatch='**/Security/**/*.test.ts'",
    "test:monitoring": "jest --testMatch='**/Monitoring/**/*.test.ts'",
    "test:performance": "jest --testMatch='**/Performance/**/*.test.ts'",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.15.13",
    "@slack/web-api": "^7.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/winston": "^2.4.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.12",
    "pg": "^8.11.3",
    "recharts": "^2.12.3",
    "typescript": "^5.4.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.11.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
